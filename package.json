{
  "name": "apply-llm-changes-cli",
  "version": "2.2.0",
  "description": "Applies file changes described in LLM output read from stdin.",
  "bin": {
    "apply-llm-changes": "bin/apply-llm-changes.js"
  },
  "scripts": {
    "prepare": "husky && yarn build",
    "build": "tsc && chmod +x bin/apply-llm-changes.js",
    "dev": "ts-node src/index.ts",
    "start": "infisical run -- ./bin/apply-llm-changes.js",
    "test": "infisical run -- jest"
  },
  "keywords": [
    "cli",
    "llm",
    "codegen",
    "automation",
    "typescript",
    "markdown"
  ],
  "author": "Radek Stepan <dev@radekstepan.com>",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@infisical/cli": "^0.41.0",
    "dotenv": "^16.5.0",
    "marked": "^15.0.8",
    "openai": "^4.96.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.11.24",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
