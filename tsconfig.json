// llm-apply-cli/tsconfig.json
{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020", // Target modern Node.js versions
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,

    /* If NOT transpiling packages: */
    "module": "CommonJS", // Standard Node.js module system

    /* Output */
    "outDir": "./dist", // Output directory for compiled JS
    "rootDir": "./src", // Source directory for TS files
    "declaration": true, // Generate .d.ts files
    "sourceMap": true, // Generate source maps for debugging

    /* Module Resolution */
     "baseUrl": ".", // Base directory for non-relative imports (optional)
     "paths": { // Aliases (optional)
      // "@/*": ["./src/*"]
     }

    // "lib": ["ES2020"], // Add specific libs if needed
  },
  "include": ["src/**/*.ts"], // Only compile files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude these directories
}
